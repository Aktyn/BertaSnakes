{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "plugins": [
      {
        "name": "@nestjs/swagger",
        "options": {
          "introspectComments": true,
          "classValidatorShim": false,
          "dtoFileNameSuffix": "DTO"
        }
      }
    ],
    "assets": [
      "**/*.asset.*",
      "**/resources/**",
      "**/*.html",
      "**/*.hbs"
    ],
    "watchAssets": true
  }
}